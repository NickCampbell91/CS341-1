<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <%- include('includes/navigation.ejs') %>

    <main>
        <% if (prods.lenth > 0) { %>
        <div class="grid">
            <% for (let prod of prods) { %>
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title"><%= product.title %></h1>
                    </header>
                    <div class="card__image">
                        <img src="https://images-na.ssl-images-amazon.com/images/I/51Zymoq7UnL._SX331_BO1,204,203,200_.jpg" alt="A book">
                    </div>
                    <div class="card__content">
                        <p class="product__price">$12.99</p>
                        <p class="product__description">Lorem ipsum dolor sit amet consectetur adipisicing elit.
                            Quisquam,
                            quaerat!</p>
                    </div>
                    <div class="card__actions">
                        <button class="btn">Add to Cart</button>
                    </div>
                </article>
            <% } %>
        </div>
        <% } else { %>
            <h1>No Products</h1>
        <% } %>
    </main>
</body>

<%- include('includes/end.ejs') %>